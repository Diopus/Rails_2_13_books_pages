<p style="color: green"><%= notice %></p>

<%= render @book %>

<table>
  <thread>
    <td>
      <th>Body</th>
      <th colspan="3"></th>
    </td>
  </thread>

  <tbody>
    <% @book.pages.each do |page| %>
      <tr>
        <td><%= page.id %></td>
        <td><%= page.body %></td>
        <td><%= link_to 'Edit', edit_page_path(page) %></td>
        <td><%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div>
  <%= link_to "Add new page", new_book_page_path(@book) %> |
  <%= link_to "Edit this book", edit_book_path(@book) %> |
  <%= link_to "Back to books", root_path %>

  <%= button_to "Destroy this book", @book, method: :delete %>
</div>
